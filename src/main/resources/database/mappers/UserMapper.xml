<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.root.app.users.UserDAO">
	<insert id="join" parameterType="com.root.app.users.UserDTO">
		INSERT INTO USERS VALUES (#{userName}, #{passWord}, #{name}, #{phone}, #{email})
	</insert>
	
	<select id="login" parameterType="com.root.app.users.UserDTO">
		SELECT * FROM USERS WHERE USERNAME = #{userName} AND PASSWORD = #{passWord}
	</select>

</mapper>